<Window x:Class="ProjektSemestralny.SelectTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemestralny"
        mc:Ignorable="d"
        Title="Select table" Height="280" Width="430" ResizeMode="NoResize" Background="#FFB233" Closed="Window_Closed" Icon="/Images/MDicon.jpg">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20" >
            <Label Content="Select table" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <ComboBox x:Name="tableList"  Width="200"  Height="25" Background="#545d6a" Margin="5" FontSize="14" SelectedItem="Binding Selectedtable"/>
            <Button x:Name="selectTableButton" Content="OK" Margin="60 15" Background="#545d6a" Foreground="White" Click="selectTableButton_Click"/>

            <Button x:Name="cancelTableButton" Content="Cancel" Margin="60 0" Background="#545d6a" Foreground="White" Click="cancelTableButton_Click"/>

        </StackPanel>
    </Border>
</Window>
