<Window x:Class="ProjektSemestralny.GryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemestralny"
        mc:Ignorable="d"
        Title="Gry table" Height="800" Width="1080" Loaded="Window_Loaded" Closed="Window_Closed" Background="#FFB233" ResizeMode="NoResize" Icon="/Images/MDicon.jpg">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <Grid>

            <DataGrid x:Name="MyDataGrid" BorderThickness="5px" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="1005" SelectionChanged="MyDataGrid_SelectionChanged" Grid.ColumnSpan="2"/>
            <GroupBox Header="Gry" Foreground="white" HorizontalAlignment="Left" Height="86" Margin="10,415,0,0" VerticalAlignment="Top" Width="1005" Grid.ColumnSpan="2"/>
            <TextBox x:Name="ID_gry_tb" Background="#545d6a" FontSize="18" Foreground="White" HorizontalAlignment="Left" Height="25" Margin="17,468,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
            <TextBox x:Name="Nazwa_tb" Background="#545d6a" FontSize="18" Foreground="White" HorizontalAlignment="Left" Height="25" Margin="182,468,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
            <TextBox x:Name="Kategoria_tb" Background="#545d6a" FontSize="18" Foreground="White" HorizontalAlignment="Left" Height="25" Margin="347,468,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
            <TextBox x:Name="Kategoria_wiekowa_tb" Background="#545d6a" FontSize="18" Foreground="White" HorizontalAlignment="Left" Height="25" Margin="512,468,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
            <TextBox x:Name="Data_wydania_tb" Background="#545d6a" FontSize="18" Foreground="White" HorizontalAlignment="Left" Height="25" Margin="677,468,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Grid.ColumnSpan="2"/>
            <TextBox x:Name="Cena_dzien_tb" Background="#545d6a" FontSize="18" Foreground="White" HorizontalAlignment="Left" Height="25" Margin="843,468,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>

            <Label Content="ID gry" Foreground="white" HorizontalAlignment="Left" Margin="17,442,0,0" VerticalAlignment="Top" Width="141"/>
            <Label Content="Nazwa" Foreground="white" HorizontalAlignment="Left" Height="27" Margin="182,440,0,0" VerticalAlignment="Top" Width="142"/>
            <Label Content="Kategoria" Foreground="white" HorizontalAlignment="Left" Height="26" Margin="347,442,0,0" VerticalAlignment="Top" Width="142"/>
            <Label Content="Kategoria wiekowa" Foreground="white" HorizontalAlignment="Left" Height="26" Margin="512,442,0,0" VerticalAlignment="Top" Width="141"/>
            <Label Content="Cena dzien" Foreground="white" HorizontalAlignment="Left" Height="26" Margin="843,442,0,0" VerticalAlignment="Top" Width="141"/>
            <Label Content="Data wydania" Foreground="white" HorizontalAlignment="Left" Height="26" Margin="677,440,0,0" VerticalAlignment="Top" Width="141" Grid.ColumnSpan="2"/>

            <Button x:Name="add_btn" Content="Add" HorizontalAlignment="Left" Margin="120,564,0,0" VerticalAlignment="Top" Height="50" Width="180" Background="#545d6a" Foreground="White" Click="add_btn_Click"/>
            <Button x:Name="update_btn" Content="Update" HorizontalAlignment="Left" Margin="442,564,0,0" VerticalAlignment="Top" Height="50" Width="180" IsEnabled="False" Background="#545d6a" Foreground="White" Click="update_btn_Click"/>
            <Button x:Name="delete_btn" Content="Delete" HorizontalAlignment="Left" Margin="764,564,0,0" VerticalAlignment="Top" Height="50" Width="180" IsEnabled="False" Background="#545d6a" Foreground="White" Click="delete_btn_Click"/>
            <Button x:Name="reset_btn" Content="Reset" HorizontalAlignment="Left" Margin="442,660,0,0" VerticalAlignment="Top" Height="50" Width="180" Background="#545d6a" Foreground="White" Click="reset_btn_Click"/>
            <Button x:Name="back_btn" Content="Back" HorizontalAlignment="Left" Margin="764,660,0,0" VerticalAlignment="Top" Height="50" Width="180" Background="#545d6a" Foreground="White" Click="back_btn_Click"/>
        </Grid>
    </Border>
</Window>
