<Window x:Class="ProjektSemestralny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemestralny"
        mc:Ignorable="d"
        Title="Connect to database..."  Height="355" Width="320" ResizeMode="NoResize" Background="#FFB233" Closed="Window_Closed">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username:" Foreground="White"/>
            <TextBox x:Name="logintb" Background="#545d6a" FontSize="18" Foreground="White"/>
            <Label Content="Password:" Foreground="White"/>
            <PasswordBox x:Name="passwordtb" Background="#545d6a" FontSize="18" Foreground="White"/>


            <Button x:Name="connectButton" Content="Connect" Margin="60 20" Click="connectButton_Click"  Background="#545d6a" Foreground="White" />
            <Button x:Name="cancelButton" Content="Cancel"  Margin="60 0" Click="cancelButton_Click" Background="#545d6a" Foreground="White"/>
        </StackPanel>
    </Border>
</Window>
